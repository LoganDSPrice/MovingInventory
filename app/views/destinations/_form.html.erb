<% was_validated = destination.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(destination, html: form_html_options) do |f| %>
  <div class="form-group">
    <% room_name_class = "form-control" %>
    <% room_name_was_invalid = destination.errors.include?(:room_name) %>

    <% if was_validated %>
      <% if room_name_was_invalid %>
        <% room_name_class << " is-invalid" %>
      <% else %>
        <% room_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :room_name %>

    <%= f.text_field :room_name, class: room_name_class, placeholder: "Enter room name" %>
    <% if room_name_was_invalid %>
      <% destination.errors.full_messages_for(:room_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
