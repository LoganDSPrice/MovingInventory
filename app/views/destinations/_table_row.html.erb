<tr>
  <td>
    <%= destination.room_name %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to destination, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_destination_url(destination), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to destination, method: :delete, data: { confirm: "Do you really want to delete this destination?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
