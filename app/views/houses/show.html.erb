<div class="row justify-content-center mb-5">
  <div class="d-flex col-md-11 align-items-center justify-content-between">
    <span class="display-4">
      House: <%= @house %>
    </span>
    <div class="d-inline">
      <span>
        <%= link_to edit_house_path(@house), class: "btn btn-lg btn-warning" do %>
        <i class="far fa-pencil "></i>
        <% end %>
      </span>
      <span>
        <%= link_to @house, method: :delete, class: "btn btn-lg btn-danger" do %>
        <i class="far fa-trash-alt"></i>
        <% end %>
      </span>
    </div>
  </div>
</div>

<div class="row justify-content-center mb-3">
  <div class="col-md-10 d-flex justify-content-between align-items-end">
    <h1 class="d-inline m-0">Boxes</h1>
    <span>
      Count: <%= @house.boxes.count %>
    </span>
  </div>
  <div class="col-md-10">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>
              Box no.
            </th>

            <th>
              House
            </th>

            <th>
              Description
            </th>

            <th>
              Actions
            </th>
          </tr>
        </thead>

        <tbody>
          <%= render collection: @house.boxes.order(:id), partial: "boxes/table_row", as: :box%>
        </tbody>
      </table>
    </div>
  </div>
</div>
